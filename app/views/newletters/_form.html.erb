
<!-- component -->
<div class="flex items-center justify-center bg-blue-100">
  <div class="row mx-4 mb-4">
      <h1 class="font-bold text-2xl text-gray-700 w-4/6 text-center">Etre informé par notre service</h1>
      <p class="text-sm text-gray-500 text-center w-5/6">S'inscrivez vous à la newletter pour etre informer des derniéres nouvelles de Action<sup>+</sup></p>
<%= simple_form_for(@newletter) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <div class="col">
      <%= f.text_field :first_name, class:"form-control p-2", placeholder:"Votre Nom ..." %>
    </div>
    <div class="col">
    <%= f.text_field :last_name, class:"form-control", placeholder:"Votre prénoms ..." %>
    </div>
    <div class="col">
      <%= f.email_field :email, class:"form-control", placeholder:"Votre Email ..." %>
    </div>
    <div class="col">
     
    <%= f.submit "Etre Informé", class:"p-2 border rounded-md bg-green-500 outline px-2 text-white font-semibold" %>
    </div>
<% end %>
    <span class="my-2">Vous recevrez uniquement du contenu relatif à Action<sup>+</sup></span>
  </div>
</div>